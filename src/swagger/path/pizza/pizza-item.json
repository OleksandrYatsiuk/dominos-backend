{
  "get": {
    "summary": "Show Pizzas List",
    "security": [],
    "tags": [
      "Pizza"
    ],
    "operationId": "pizzaList",
    "parameters": [
      {
        "in": "query",
        "name": "limit",
        "description": "The number of items returned.",
        "required": false,
        "example": "20",
        "schema": {
          "type": "integer",
          "minimum": 1,
          "default": 20
        }
      },
      {
        "in": "query",
        "name": "page",
        "description": "The number of page.",
        "required": false,
        "example": 1,
        "schema": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        }
      },
      {
        "in": "query",
        "name": "sort",
        "description": "Sort ordering. You can use sort=[-]fieldName as parameter in Url",
        "required": false,
        "schema": {
          "enum": [
            "name",
            "-name",
            "category",
            "createdAt",
            "-createdAt",
            "updatedAt",
            "-updatedAt",
            "weight.small",
            "-weight.small",
            "price.low",
            "-price.low"
          ]
        }
      }
    ],
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "$ref": "../../schemas/status200.json"
                },
                {
                  "properties": {
                    "result": {
                      "type": "array",
                      "items": {
                        "allOf": [
                          {
                            "$ref": "../../schemas/pizza.json"
                          },
                          {
                            "$ref": "../../schemas/time.json"
                          }
                        ]
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "401": {
        "description": "Unprocessable Entity",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/status401.json"
            }
          }
        }
      }
    }
  },
